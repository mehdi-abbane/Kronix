---
import MainButton from "./MainButton.astro"
---
<header class="bg-[var(--dark)] p-4">
  <nav
    aria-label="Primary navigation"
    x-data="{ open: false }"
  >
    <div class="flex items-center justify-between">
      <!-- Brand -->
      <a href="/" class="text-2xl font-bold text-white" aria-label="Home">
        <span class="sr-only">Kronix home</span>
        <span aria-hidden="true">
          Kro<span class="text-[var(--lime)]">nix</span>
        </span>
      </a>

      <!-- Primary navigation (desktop) -->
      <ul class="hidden md:flex items-center gap-6 text-white font-semibold">
        <li><a href="#process-title" aria-label="Process">Process</a></li>
        <li><a href="#benefits-title" aria-label="Benefits">Benefits</a></li>
        <li><a href="#services" aria-label="Services">Services</a></li>
        <li><a href="#works-title" aria-label="Portfolio">Portfolio</a></li>
        <li><a href="#faq" aria-label="FAQ">FAQ</a></li>
      </ul>

      <!-- Primary action (desktop) -->
      <div class="hidden md:block">
        <MainButton href="/get-started">
          Get started
        </MainButton>
      </div>

      <!-- Mobile menu toggle -->
      <button
        type="button"
        class="md:hidden text-white"
        aria-label="Open menu"
        aria-controls="mobile-menu"
        :aria-expanded="open.toString()"
        @click="open = !open"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          />
        </svg>
      </button>
    </div>

    <!-- Mobile navigation -->
    <div
      id="mobile-menu"
      x-show="open"
      x-transition
      @click.outside="open = false"
      class="md:hidden mt-4"
    >
      <ul class="flex flex-col gap-4 text-white font-semibold">
        <li><a href="/process" aria-label="Process">Process</a></li>
        <li><a href="/benefits" aria-label="Benefits">Benefits</a></li>
        <li><a href="/services" aria-label="Services">Services</a></li>
        <li><a href="/portfolio" aria-label="Portfolio">Portfolio</a></li>
        <li><a href="/faq">FAQ</a></li>
        <li>
          <MainButton href="/get-started">
            Get started
          </MainButton>
        </li>
      </ul>
    </div>
  </nav>
</header>


